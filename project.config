# DD Registry CW 项目配置文件

## 项目信息
PROJECT_NAME="DD Registry CW"
PROJECT_VERSION="1.0.0"
PROJECT_DESCRIPTION="推荐积分系统智能合约"
PROJECT_AUTHOR="DD Registry Team"
PROJECT_LICENSE="MIT"

## 技术栈
RUST_VERSION="1.70+"
COSMWASM_VERSION="2.2.2"
CW_STORAGE_PLUS_VERSION="2.x"

## 部署配置
DEFAULT_CHAIN_ID="luckee-testnet-1"
DEFAULT_NODE_URL="https://rpc.luckee-testnet.com"
DEFAULT_GAS_PRICES="0.025uluckee"
DEFAULT_GAS_ADJUSTMENT="1.5"

## 合约配置
MAX_REFERRAL_DEPTH=3
REFERRAL_COOLDOWN=3600
MAX_DAILY_REFERRALS=10
POINTS_DECAY_RATE="0.01"
MIN_POINTS_FOR_WITHDRAWAL="1000"

## 积分规则
BASE_POINTS_PER_REFERRAL="100"
BRONZE_MULTIPLIER="1.0"
SILVER_MULTIPLIER="1.2"
GOLD_MULTIPLIER="1.5"
PLATINUM_MULTIPLIER="2.0"

## 推荐奖励比例
DIRECT_REFERRAL_RATE="0.5"
LEVEL_2_REFERRAL_RATE="0.2"
LEVEL_3_REFERRAL_RATE="0.1"

## 安全配置
ENABLE_REENTRANCY_PROTECTION=true
ENABLE_ACCESS_CONTROL=true
ENABLE_EMERGENCY_PAUSE=true
MAX_BATCH_SIZE=100

## 测试配置
TEST_TIMEOUT=300
TEST_RETRIES=3
ENABLE_INTEGRATION_TESTS=true
ENABLE_SECURITY_TESTS=true

## CI/CD 配置
ENABLE_AUTOMATED_TESTING=true
ENABLE_WASM_OPTIMIZATION=true
ENABLE_SECURITY_SCANNING=true
ENABLE_DOCUMENTATION_GENERATION=true
